/*maqueta
https://xd.adobe.com/spec/c722701f-1b06-47cc-56e5-021b1c22b396-b113/specs/*/

body {
  text-align: center;
  color: #000f08;
  font-family: "Open Sans", sans-serif;
  /*No dejar margenes*/
  margin: 0;
}

body * {
  margin: 0;
  padding: 0;
  border: 0;
}

nav {
  text-align: left;
  padding: 1.25rem;
  position: fixed;
  width: 100vw;
  font-size: 1rem;
}

nav uk {
  list-style-type: none;
}

nav ul li {
  display: inline-block;
  /*    TOP-BOOTOM RIGHT-LEFT*/
  margin: 0 1rem;
  vertical-align: middle;
}

.oscuro {
  background: #000f08;
  color: aliceblue;
}
.oscuro a {
  color: #ffff;
  /*borra la linea que estaba abajo del barra de menu*/
  text-decoration: none;
}

.icono {
  width: 2rem;
}

.icono img {
  filter: invert();
  /*
    -webkit-filter: invert(100%);
*/
}

.hero-section {
  text-align: right;
  text-shadow: 0px 6px #707070;
  letter-spacing: 1px;
  opacity: 1;
  color: aliceblue;
  background-image: url(../img/bg-hero.png);
  background-size: cover;
  background-repeat: no-repeat; /*no quede en mosaico*/
  padding: 6rem 4rem;
}

#ubicacion img {
  width: 50vw;
}

/*proxima charla texto a la derecha*/

.centrado {
  width: 75%;
  margin: 0 auto;
}

.charla-speaker,
.charla-texto {
  display: inline-block;
}

.charla-speaker {
  width: 25%;
  vertical-align: middle;
}

.charla-texto {
  width: 72%;
  vertical-align: middle;
  margin-left: 2.5%;
  white-space: normal;
}

.sweet-brown {
  text-align: left;
  background: #a4452c;
  color: aliceblue;
  padding: 3.125rem;
  white-space: nowrap;
}

.evento img{

width: 75%;

}

.evento{

width: 25vw;

}